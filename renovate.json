{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch updates for stable packages (non-0.x)",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchPackageNames": [
        "!electron",
        "!vite",
        "!sqlite3",
        "!typeorm"
      ]
    },
    {
      "description": "Critical packages - manual review always",
      "matchPackageNames": [
        "electron",
        "vite",
        "react",
        "react-dom",
        "sqlite3",
        "typeorm"
      ],
      "automerge": false
    }
  ]
}
