{
  "name": "ludo-wallet",
  "version": "1.0.0",
  "description": "A digital wallet for toy library members that tracks points - recharge your balance with deposits and spend points each time you borrow games and toys",
  "keywords": [
    "ludothek",
    "wallet"
  ],
  "homepage": "https://github.com/ebcFlagman/ludo-wallet#readme",
  "bugs": {
    "url": "https://github.com/ebcFlagman/ludo-wallet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebcFlagman/ludo-wallet.git"
  },
  "license": "MIT",
  "author": "Patrick Wachsmuth",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "vite build --config vite.main.config.ts && vite build --config vite.preload.config.ts",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"wait-on http://localhost:5173 dist/main/main.js && cross-env NODE_ENV=development electron .\"",
    "dev:main": "vite build --config vite.main.config.ts --watch",
    "dev:renderer": "vite",
    "start": "npm run build && electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "lucide-react": "0.563.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "reflect-metadata": "0.2.2",
    "sqlite3": "5.1.7",
    "typeorm": "0.3.28"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "25.2.0",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.3",
    "autoprefixer": "10.4.24",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "electron": "40.1.0",
    "electron-builder": "26.7.0",
    "postcss": "8.5.6",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.18",
    "tailwindcss-animate": "1.0.7",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "wait-on": "9.0.3"
  },
  "build": {
    "appId": "ch.flagmansworld.ludowallet",
    "productName": "Ludo Wallet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    }
  }
}
